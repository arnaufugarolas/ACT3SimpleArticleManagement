<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="layout_w_w">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_0_0">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="layout_0_w">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_m_w">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="column" parent="layout_w_w">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="row" parent="layout_w_w">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="item_article_data" parent="layout_0_w">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:height">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="item_article_price" parent="item_article_data">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="item_article_description" parent="layout_0_w">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:breakStrategy">high_quality</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:autoSizeMaxTextSize">50dp</item>
    </style>

    <style name="item_article_software" parent="layout_m_w">
        <item name="android:background">@color/sky_blue</item>
    </style>

    <style name="item_article_hardware" parent="layout_m_w">
        <item name="android:background">@color/kelly_green</item>
    </style>

    <style name="item_article_other" parent="layout_m_w">
        <item name="android:background">@color/gold</item>
    </style>

    <style name="item_article_none" parent="layout_m_w">
        <item name="android:background">@color/graphite</item>
    </style>

    <style name="item_article_stock_red" parent="item_article_data">
        <item name="android:textColor">@color/red</item>
    </style>

</resources>